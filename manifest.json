{
    "name": "Job Application Autofill",
    "version": "1.0",
    "description": "Autofills job application forms.",
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
    ],
    "action": {
        "default_icon": {
            "64": "assets/edit.png",
            "128": "assets/diskette.png"
        },
        "default_title": "Job Application Autofill",
        "default_popup": "popup.html"
    },
    "manifest_version": 3
}