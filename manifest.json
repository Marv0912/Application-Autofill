{
    "name": "Job Application Autofill",
    "version": "1.0",
    "description": "Autofills job application forms.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "https://*.youtube.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "action": {
        "default_icon": {
            "64": "assets/edit.png",
            "128": "assets/diskette.png"
        },
        "default_title": "Job Application Autofill",
        "default_popup": "popup.html"
    },
    "manifest_version": 3
}